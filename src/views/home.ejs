    <div class="form-add-user">
        <form action="/creat-user" method="post">
            <fieldset class="field-set">
                <legend>Add new users</legend>


                <div class="input-group">
                    <label>Email</label>
                    <input type="text" name="user-email" id="emailID">
                </div>
                <div class="input-group">
                    <label>Name</label>
                    <input type="text" name="user-name" id="nameID">
                </div>
                <div class="input-group">
                    <label>City</label>
                    <input type="text" name="user-city" id="cityID">
                </div>
                <div>
                    <button class="button-add-user">Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

